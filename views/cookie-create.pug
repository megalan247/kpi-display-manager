extends layouts/_layout.pug

block variables
	- var activePage = 'dashboard'
	- var activeGroup = 'none'

block title
	title New Cookie for siteID #{siteID}

block content


	.app-title
		div
			h1
				i.fa.fa-th-list
				|  New Cookie for Site #{siteID}
			p Please enter new cookie details

	.row.user

		.col-md-12
			.tile
				h4.line-head Edit Cookie Settings
				form(method='POST' action='/cookie/create')
					.row
						.col-md-8.mb-4
							label Associated Site ID
							input.form-control(type="text", name="id", value=siteID, readOnly='')

						.clearfix

						.col-md-8.mb-4
							label Cookie Name
							input.form-control(type="text", name="name")

						.clearfix

						.col-md-8.mb-4
							label Cookie Value
							input.form-control(type="text", name="value")

						.clearfix

						.col-md-8.mb-4
							label Cookie URL
							input.form-control(type="text", name="url")

						.clearfix

						.col-md-8.mb-4
							label Cookie Domain
							input.form-control(type="text", name="domain")

						.clearfix

						.col-md-8.mb-4
							label Cookie Path
							input.form-control(type="text", name="path", value="/")

						.clearfix

						.col-md-8.mb-4
							label Cookie Expiration
							input.form-control(type="text", name="expiration", value="none")

						.clearfix

					.row.mb-10
						.col-md-12
							button.btn.btn-primary(type="submit")
								i.fa.fa-fw.fa-lg.fa-check-circle
								|  Save